prototype(TdsOnepager.Site:Resource.CssInclude) < prototype(Neos.Fusion:Component) {
    path = ''
    inBackend = true

    @if.showInBackend = ${site.context.inBackend == false || this.inBackend == true}

    renderer = Neos.Fusion:Tag {
        tagName = 'link'
        attributes {
            href = Neos.Fusion:ResourceUri {
                path = ${props.path}
            }
            type = 'text/css'
            rel = 'stylesheet'
        }
    }
}
